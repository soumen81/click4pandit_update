<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="position"
            type="java.lang.Integer" />
        <variable
            name="viewModel"
            type="com.autumntechcreation.click4panditcustomer.ui.choosepackage.ChoosePackageViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:paddingBottom="@dimen/dimen_10dp"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPackageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:background="@color/yellowColor"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tvStandardPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/standardpackage"
            style="@style/Style_TextView_FontBold"
            android:textColor="@color/blackColor"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <TextView
            android:id="@+id/tvPujaDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/inclusive"
            android:textColor="@color/blackColor"
            android:layout_marginLeft="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStandardPackage"
           ></TextView>
        <TextView
            android:id="@+id/tvRupeeSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rupeesign"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvStandardPackage">

        </TextView>
        <TextView
            android:id="@+id/tvStandardAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="5700"
            style="@style/Style_TextView_FontRegular"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:layout_constraintLeft_toRightOf="@+id/tvRupeeSign"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <ImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_15dp"
            android:src="@drawable/ic_minus_sign"
            android:layout_marginRight="@dimen/dimen_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPujaProcedureDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clPackageHeader">
        <TextView
            android:id="@+id/tvPujaProcedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            style="@style/Style_TextView_FontSemiBold"
            android:textColor="@color/blackColor"
            android:text="@string/procedure"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        </TextView>
        <TextView
            android:id="@+id/tvPujaProcedureList"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            style="@style/Style_TextView_FontRegular"
            android:textColor="@color/blackColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPujaProcedure">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPujaPackageDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clPujaProcedureDesc">
<TextView
    android:id="@+id/tvPujaSamagries"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    style="@style/Style_TextView_FontSemiBold"
    android:textColor="@color/blackColor"
    android:text="@string/pujasamgries"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">

</TextView>
        <TextView
            android:id="@+id/tvPujaSamagriList"
            android:layout_width="@dimen/dimen_230dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            style="@style/Style_TextView_FontRegular"
            android:textColor="@color/blackColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPujaSamagries">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clYajaman"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    app:layout_constraintTop_toBottomOf="@+id/clPujaPackageDesc">
    <TextView
        android:id="@+id/tvYajaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Style_TextView_FontSemiBold"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/blackColor"
        android:text="@string/yajaman"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </TextView>
    <TextView
        android:id="@+id/tvYajamanNameList"
        android:layout_width="@dimen/dimen_250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/blackColor"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/yajaman"
        style="@style/Style_TextView_FontRegular"
        app:layout_constraintTop_toBottomOf="@+id/tvYajaman"
        app:layout_constraintLeft_toLeftOf="parent">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvChoosePackageConfirm"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/newroundblack"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"
            style="@style/Style_TextView_FontBold"
            android:text="@string/confirm"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/font_12sp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clYajaman"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>