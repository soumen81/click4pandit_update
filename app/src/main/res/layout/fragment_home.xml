<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="HomeViewModel"
            type="com.autumntechcreation.click4panditcustomer.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/buttonColor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/buttonColor"
                android:orientation="vertical">
                <!--<ImageView
                    android:id="@+id/imgvwPandit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:src="@drawable/panditji"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                </ImageView>-->
                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carousal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp"
                    tools:ignore="MissingConstraints">

                </com.synnapps.carouselview.CarouselView>

                <TextView
                    android:id="@+id/tvExperienced"
                    style="@style/Style_TextView_FontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="@string/expericed"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/font_12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/carousal">

                </TextView>

                <TextView
                    android:id="@+id/tvAccesibility"
                    style="@style/Style_TextView_FontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accessibility"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/font_12sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvExperienced">

                </TextView>

                <TextView
                    android:id="@+id/tvAndeasy"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="@string/andeasy"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/font_12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccesibility">

                </TextView>

                <TextView
                    android:id="@+id/tvDivine"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/divineexperience"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/font_12sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAndeasy">

                </TextView>

                <TextView
                    android:id="@+id/tvChoosePuja"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choosepuja"
                    android:textColor="@color/yellowColor"
                    android:textSize="@dimen/font_14sp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/tvTypesPuja"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="@dimen/dimen_200dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/round_white_corner"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:drawablePadding="@dimen/dimen_10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvChoosePuja">

                </TextView>

                <TextView
                    android:id="@+id/tvCategoies"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="@dimen/dimen_200dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/round_white_corner"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:drawablePadding="@dimen/dimen_10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTypesPuja">

                </TextView>

                <TextView
                    android:id="@+id/tvViewPackages"
                    style="@style/Style_TextView_FontBold"
                    android:layout_width="@dimen/dimen_150dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@drawable/round_black_corner"
                    android:gravity="center"
                    android:text="@string/viewpackage"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/font_12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCategoies">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>