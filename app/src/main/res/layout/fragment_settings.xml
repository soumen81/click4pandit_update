<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="SettingsViewModel"
            type="com.autumntechcreation.click4panditcustomer.ui.settings.SettingsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        >
        <TextView
            android:id="@+id/tvSettings"
            style="@style/Style_TextView_FontBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:text="@string/settings"
            android:textSize="@dimen/font_18sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toTopOf="parent">

        </TextView>

        <View
            android:id="@+id/viewSettings"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="#D1453E"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/tvSettings"></View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tvHowWeWork"
            style="@style/Style_TextView_FontBold"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_yellow_corner"
            android:drawableRight="@drawable/ic_arrowblack"
            android:gravity="center"
            android:text="@string/howwework"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_14sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <TextView
            android:id="@+id/tvPrivacypolicy"
            style="@style/Style_TextView_FontBold"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_yellow_corner"
            android:drawableRight="@drawable/ic_arrowblack"
            android:gravity="center"
            android:text="@string/privacypolicy"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_14sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/tvHowWeWork">
        </TextView>
        <TextView
            android:id="@+id/tvTermsOfUse"
            style="@style/Style_TextView_FontBold"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_yellow_corner"
            android:drawableRight="@drawable/ic_arrowblack"
            android:gravity="center"
            android:text="@string/termsofuse"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_14sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/tvPrivacypolicy">
        </TextView>

        <TextView
            android:id="@+id/tvFaq"
            style="@style/Style_TextView_FontBold"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_yellow_corner"
            android:drawableRight="@drawable/ic_arrowblack"
            android:gravity="center"
            android:text="@string/faq"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_14sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/tvTermsOfUse">
        </TextView>
        <TextView
            android:id="@+id/tvCancellationandRefund"
            style="@style/Style_TextView_FontBold"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_yellow_corner"
            android:drawableRight="@drawable/ic_arrowblack"
            android:gravity="center"
            android:text="@string/cancellansandrefund"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_14sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/tvFaq">
        </TextView>
        <TextView
            android:id="@+id/tvContactUs"
            style="@style/Style_TextView_FontBold"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_yellow_corner"
            android:drawableRight="@drawable/ic_arrowblack"
            android:gravity="center"
            android:text="@string/contactus"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_14sp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/tvCancellationandRefund">
        </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>