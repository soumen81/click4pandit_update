<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.autumntechcreation.click4panditcustomer.ui.shopshippingaddress.ShopShippingAddressViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor"
            android:paddingBottom="@dimen/dimen_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopShippingDetails"
                style="@style/Style_TextView_FontBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:text="@string/shippingdetails"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/font_14sp"
                android.support.design:layout_constraintLeft_toLeftOf="parent"
                android.support.design:layout_constraintRight_toRightOf="parent"
                android.support.design:layout_constraintTop_toTopOf="parent">

            </TextView>

            <View
                android:id="@+id/viewShopShippingDetails"
                android:layout_width="@dimen/dimen_130dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="#D1453E"
                android.support.design:layout_constraintLeft_toLeftOf="parent"
                android.support.design:layout_constraintRight_toRightOf="parent"
                android.support.design:layout_constraintTop_toBottomOf="@+id/tvShopShippingDetails"></View>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/firstName"
                android.support.design:layout_constraintTop_toBottomOf="@+id/viewShopShippingDetails"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingFirstName"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false"
                    android:inputType="text"
                    android:scrollbars="vertical"
                    android:maxLength="60"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/lastName"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingFirstName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingLastName"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false"
                    android:inputType="text"
                    android:scrollbars="vertical"
                    android:maxLength="60"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/email"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingLastName"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingEmail"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false"
                    android:inputType="textEmailAddress"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputShopShippingMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textColorHint="@color/colorBadge"
                android:hint="@string/mobileNo"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingEmail"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtShopBillingMobileNo"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false"
                    android:maxLength="10"
                    android:inputType="number"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputShopShippingAlternateMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textColorHint="@color/colorBadge"
                android:hint="@string/alternatemobileno"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputShopShippingMobileNo"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtShopShippingAlternateMobileNo"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="10"
                    android:editable="false"
                    android:inputType="number"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/address1"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputShopShippingAlternateMobileNo"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingAddress"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:scrollbars="vertical"
                    android:maxLength="40"
                    android:inputType="textPostalAddress"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/address2"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingAddress"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingAddress2"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:scrollbars="vertical"
                    android:maxLength="40"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingAddress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/address3"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingAddress2"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopBillingAddress3"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:scrollbars="vertical"
                    android:maxLength="40"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/state"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingAddress3"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingState"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false"
                    android:inputType="text"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/city"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingState"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingCity"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:scrollbars="vertical"
                    android:editable="false"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutShopShippingPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBadge"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:hint="@string/pincode"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingCity"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTxtShopShippingPincode"
                    style="@style/Style_TextView_FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="6"
                    android:inputType="number"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/parent1"
                    app:layout_constraintTop_toTopOf="@+id/parent1" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tvShopShippingDiffLoc"
                style="@style/Style_TextView_FontRegular"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/ic_newovalblack"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_5dp"
                android:gravity="center"
                android:text="@string/diffbillingaddress"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/font_14sp"
                android.support.design:layout_constraintLeft_toLeftOf="parent"
                android.support.design:layout_constraintRight_toRightOf="parent"
                android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutShopShippingPincode">

            </TextView>
            <TextView
                android:id="@+id/tvShopShippingSubmit"
                style="@style/Style_TextView_FontRegular"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/ic_newovalblack"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/font_14sp"
                android.support.design:layout_constraintLeft_toLeftOf="parent"
                android.support.design:layout_constraintRight_toRightOf="parent"
                android.support.design:layout_constraintTop_toBottomOf="@+id/tvShopShippingDiffLoc">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>