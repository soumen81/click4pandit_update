<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/whiteColor</item>


    </style>
    <style name="Style_TextView_FontBold">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>
    <style name="Style_TextView_FontBoldItalic">
        <item name="fontFamily">@font/opensans_bolditalic</item>
    </style>
    <style name="Style_TextView_FontExtraBold">
        <item name="fontFamily">@font/opensans_extrabold</item>
    </style>
    <style name="Style_TextView_FontExtraBoldItalic">
        <item name="fontFamily">@font/opensans_extrabolditalic</item>
    </style>
    <style name="Style_TextView_FontItalic">
        <item name="fontFamily">@font/opensans_italic</item>
    </style>
    <style name="Style_TextView_FontLight">
        <item name="fontFamily">@font/opensans_light</item>
    </style>
    <style name="Style_TextView_FontLightItalic">
        <item name="fontFamily">@font/opensans_lightitalic</item>
    </style>
    <style name="Style_TextView_FontRegular">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>
    <style name="Style_TextView_FontSemiBold">
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>
    <style name="Style_TextView_FontSemiBoldItalic">
        <item name="fontFamily">@font/opensans_semibolditalic</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="Style_TextView_Font">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="colorControlNormal">@color/buttonborder</item>
        <item name="colorControlActivated">@color/buttonborder</item>
        <item name="colorControlHighlight">@color/buttonborder</item>
        <!-- <item name="android:textSize">16sp</item>-->

    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Please Wait…</item>
        <item name="DialogSpotColor">@color/spots_dialog_color</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <style name="Permissions.TransparentTheme" parent="android:Theme.Light" />

    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading…</item>
        <item name="DialogSpotCount">5</item>
    </style>
</resources>
