<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ContactUsViewModel"
            type="com.autumntechcreation.click4panditcustomer.ui.contactus.ContactUsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeaderContactUs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@color/whiteColor"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgbackContactus"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_30dp"
                android:src="@drawable/ic_whiteback"
                android.support.design:layout_constraintBottom_toBottomOf="parent"
                android.support.design:layout_constraintLeft_toLeftOf="parent"
                android.support.design:layout_constraintTop_toTopOf="parent"></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30dp"
                android:src="@drawable/ic_black_logo"
                android.support.design:layout_constraintBottom_toBottomOf="parent"
                android.support.design:layout_constraintLeft_toLeftOf="parent"
                android.support.design:layout_constraintRight_toRightOf="parent"
                android.support.design:layout_constraintTop_toTopOf="parent"></ImageView>

            <View
                android:id="@+id/viewContactUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/blackColor"
                android.support.design:layout_constraintBottom_toBottomOf="parent"></View>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_40dp"
            android.support.design:layout_constraintLeft_toLeftOf="parent"
            android.support.design:layout_constraintRight_toRightOf="parent"
            android.support.design:layout_constraintTop_toBottomOf="@+id/clHeaderContactUs">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:fitsSystemWindows="true"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/contactHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHeaderContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/buttonColor"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android.support.design:layout_constraintLeft_toLeftOf="parent"
                        android.support.design:layout_constraintRight_toRightOf="parent"
                        android.support.design:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvContactUs"
                            style="@style/Style_TextView_FontBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android:text="@string/contactus"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/font_14sp"
                            android.support.design:layout_constraintLeft_toLeftOf="parent"
                            android.support.design:layout_constraintRight_toRightOf="parent"
                            android.support.design:layout_constraintTop_toTopOf="parent">

                        </TextView>

                        <View
                            android:id="@+id/viewcontactus"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="@dimen/dimen_1dp"
                            android:background="@color/whiteColor"
                            android.support.design:layout_constraintLeft_toLeftOf="parent"
                            android.support.design:layout_constraintRight_toRightOf="parent"
                            android.support.design:layout_constraintTop_toBottomOf="@+id/tvContactUs"></View>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android.support.design:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android.support.design:layout_constraintTop_toBottomOf="@+id/viewcontactus">

                            <TextView
                                android:id="@+id/tvAddress"
                                style="@style/Style_TextView_FontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_pin"
                                android:drawablePadding="@dimen/dimen_10dp"
                                android:text="@string/addressautumn"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/font_12sp"
                                android.support.design:layout_constraintLeft_toLeftOf="parent"
                                android.support.design:layout_constraintTop_toTopOf="parent"></TextView>

                            <TextView
                                android:id="@+id/tvAddress1"
                                style="@style/Style_TextView_FontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_25dp"
                                android:text="@string/addressautumn1"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/font_12sp"
                                android.support.design:layout_constraintRight_toRightOf="parent"
                                android.support.design:layout_constraintStart_toStartOf="@+id/tvAddress"
                                android.support.design:layout_constraintTop_toBottomOf="@+id/tvAddress"></TextView>

                            <TextView
                                android:id="@+id/tvAddress2"
                                style="@style/Style_TextView_FontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_25dp"
                                android:text="@string/addressautumn2"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/font_12sp"
                                android.support.design:layout_constraintLeft_toLeftOf="parent"
                                android.support.design:layout_constraintTop_toBottomOf="@+id/tvAddress1"></TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clTimeOffice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android.support.design:layout_constraintLeft_toLeftOf="parent"
                           android:layout_marginLeft="@dimen/dimen_10dp"

                            android.support.design:layout_constraintTop_toBottomOf="@+id/clAddress">

                            <TextView
                                android:id="@+id/tvDateTimeOffice"
                                style="@style/Style_TextView_FontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_clocktime"
                                android:drawablePadding="@dimen/dimen_10dp"
                                android:text="@string/datetimeoffice"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/font_12sp"
                                android.support.design:layout_constraintLeft_toLeftOf="parent"
                                android.support.design:layout_constraintTop_toTopOf="parent"></TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clDial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android.support.design:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"

                            android.support.design:layout_constraintTop_toBottomOf="@+id/clTimeOffice">

                            <TextView
                                android:id="@+id/tvDial"
                                style="@style/Style_TextView_FontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_call"
                                android:drawablePadding="@dimen/dimen_10dp"
                                android:text="@string/dialoffice"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/font_12sp"
                                android.support.design:layout_constraintLeft_toLeftOf="parent"
                                android.support.design:layout_constraintTop_toTopOf="parent"></TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android.support.design:layout_constraintLeft_toLeftOf="parent"
                           android:layout_marginLeft="@dimen/dimen_10dp"

                            android.support.design:layout_constraintTop_toBottomOf="@+id/clDial">

                            <TextView
                                android:id="@+id/tvContactEmail"
                                style="@style/Style_TextView_FontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_letter"
                                android:drawablePadding="@dimen/dimen_10dp"
                                android:text="@string/contactoffice"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/font_12sp"
                                android.support.design:layout_constraintLeft_toLeftOf="parent"
                                android.support.design:layout_constraintTop_toTopOf="parent"></TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:hint="@string/name"
                        android:textColorHint="@color/colorBadge"
                        android.support.design:layout_constraintTop_toBottomOf="@+id/clHeaderContact"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtTxtFirstName"
                            style="@style/Style_TextView_FontLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLength="60"
                            android:scrollbars="vertical"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:drawableStart="@drawable/ic_user"
                            android:singleLine="true"
                            android:textSize="@dimen/font_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/parent1"
                            app:layout_constraintTop_toTopOf="@+id/parent1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:hint="@string/phoneno"
                        android:textColorHint="@color/colorBadge"
                        android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutFirstName"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtTxtMobileNo"
                            style="@style/Style_TextView_FontLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:drawableStart="@drawable/ic_phone"
                            android:maxLength="10"
                            android:scrollbars="vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/font_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/parent1"
                            app:layout_constraintTop_toTopOf="@+id/parent1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:hint="@string/email"
                        android:textColorHint="@color/colorBadge"
                        android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutMobileNo"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtTxtEmail"
                            style="@style/Style_TextView_FontLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:drawableStart="@drawable/ic_envelope"
                            android:inputType="textEmailAddress"
                            android:scrollbars="vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/font_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/parent1"
                            app:layout_constraintTop_toTopOf="@+id/parent1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:hint="@string/address"
                        android:textColorHint="@color/colorBadge"
                        android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutEmail"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtTxtAddress"
                            style="@style/Style_TextView_FontLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:drawableStart="@drawable/ic_loca"
                            android:maxLength="60"
                            android:scrollbars="vertical"

                            android:singleLine="true"
                            android:textSize="@dimen/font_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/parent1"
                            app:layout_constraintTop_toTopOf="@+id/parent1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:hint="@string/message"
                        android:textColorHint="@color/colorBadge"
                        android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutAddress"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtTxtMessage"
                            style="@style/Style_TextView_FontLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLength="60"
                            android:scrollbars="vertical"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:drawableStart="@drawable/ic_message"
                            android:singleLine="true"
                            android:textSize="@dimen/font_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/parent1"
                            app:layout_constraintTop_toTopOf="@+id/parent1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvSubmit"
                        style="@style/Style_TextView_FontBold"
                        android:layout_width="@dimen/dimen_120dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/newroundedred"
                        android:gravity="center"

                        android:text="@string/submit"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/font_14sp"
                        android.support.design:layout_constraintLeft_toLeftOf="parent"
                        android.support.design:layout_constraintRight_toRightOf="parent"
                        android.support.design:layout_constraintTop_toBottomOf="@+id/inputLayoutMessage">

                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>